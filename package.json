{
	"name": "premium-servers",
	"version": "1.0.0",
	"description": "Bot used to claim premium servers.",
	"main": "dist/index.js",
	"repository": "https://github.com/Danbot-Hosting/Premium-Servers",
	"author": "DanbotHosting",
	"license": "MIT",
	"type": "module",
	"scripts": {
		"start:flags": "node --experimental-specifier-resolution=node --no-warnings --enable-source-maps dist/index.js",
		"build": "yarn tsup src",
		"watch": "yarn build --watch",
		"start": "yarn cross-env NODE_ENV=production yarn build && yarn start:flags",
		"dev": "yarn cross-env NODE_ENV=development yarn build --silent && yarn start:flags",
		"format": "yarn prettier --write .",
		"lint": "yarn eslint --fix src/**/* --ext .ts"
	},
	"dependencies": {
		"better-sqlite3": "^7.5.3",
		"colorette": "^2.0.17",
		"discord.js": "^13.8.0",
		"dotenv-cra": "^3.0.2",
		"node-fetch": "^3.2.6",
		"quick.db": "^9.0.3",
		"reflect-metadata": "^0.1.13",
		"tsyringe": "^4.7.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.0.2",
		"@commitlint/config-conventional": "^17.0.2",
		"@sapphire/eslint-config": "^4.3.6",
		"@sapphire/prettier-config": "^1.4.3",
		"@sapphire/ts-config": "^3.3.4",
		"@types/better-sqlite3": "^7",
		"@types/node": "^17.0.40",
		"@typescript-eslint/eslint-plugin": "^5.27.1",
		"@typescript-eslint/parser": "^5.27.1",
		"cross-env": "^7.0.3",
		"eslint": "^8.17.0",
		"lint-staged": "^13.0.0",
		"prettier": "^2.6.2",
		"pretty-quick": "^3.1.3",
		"tsup": "^6.1.2",
		"typescript": "^4.7.3"
	},
	"lint-staged": {
		"*.{ts,js}": [
			"yarn format"
		]
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"prettier": "@sapphire/prettier-config",
	"packageManager": "yarn@3.2.1"
}
